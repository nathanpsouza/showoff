<form>
  <div class="input-group md-form form-sm form-1 pl-0">
    <div class="input-group-prepend">
      <span class="input-group-text pink lighten-3" id="basic-text1"><i class="fas fa-search"
          aria-hidden="true"></i></span>
    </div>
    <input class="form-control my-0 py-1" type="text" name="term" value="<%= @term %>" placeholder="Search" aria-label="Search">
  </div>
</form>

<div class="row">
  <%- @widgets.each do |widget| %>
    <%= render partial: 'widget', locals: { widget: widget } %>
  <% end %>
</div>

